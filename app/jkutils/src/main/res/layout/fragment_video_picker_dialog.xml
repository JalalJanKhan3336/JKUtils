<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_16sdp"
    android:layout_gravity="center"
    android:minWidth="@dimen/_100sdp"
    android:minHeight="@dimen/_100sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_16sdp"
    tools:context=".dialog.VideoPickerDialogFragment">

    <TextView
        android:id="@+id/msg_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/video_source_msg"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/video_via_camera_iv"/>

    <ImageView
        android:id="@+id/video_via_camera_iv"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:src="@drawable/ic_video_camera"
        android:tint="@android:color/black"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintBottom_toTopOf="@id/video_camera_tv"
        app:layout_constraintEnd_toStartOf="@id/video_via_gallery_iv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/msg_tv"/>

    <TextView
        android:id="@+id/video_camera_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/camera"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="@id/video_via_camera_iv"
        app:layout_constraintEnd_toEndOf="@id/video_via_camera_iv"
        app:layout_constraintTop_toBottomOf="@id/video_via_camera_iv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/video_via_gallery_iv"
        android:layout_width="@dimen/_48sdp"
        android:layout_height="@dimen/_48sdp"
        android:src="@drawable/ic_video_gallery"
        android:tint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/video_gallery_tv"
        app:layout_constraintStart_toEndOf="@id/video_via_camera_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/video_via_camera_iv"/>

    <TextView
        android:id="@+id/video_gallery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/gallery"
        android:textSize="@dimen/_12ssp"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/_4sdp"
        app:layout_constraintStart_toStartOf="@id/video_via_gallery_iv"
        app:layout_constraintEnd_toEndOf="@id/video_via_gallery_iv"
        app:layout_constraintTop_toBottomOf="@id/video_via_gallery_iv"
        app:layout_constraintBottom_toBottomOf="@id/video_camera_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>